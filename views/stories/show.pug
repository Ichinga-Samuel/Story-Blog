extends ../layout

block header
    div.row
        div(class="col s12 m8")
            h3=story.title
                small !{formatter.editIcon(story.user, user, story._id, false)}
            div(class="card story")
                div.card-content
                    span(class="card-title")=formatter.formatDate(story.date, 'MMMM Do YYYY, h:mm:ss a')
                    p=formatter.stripTags(story.body)

            div(class="col s12 m4")
                div(class="card center-align")
                    div(class="card-content")
                        span(class="card-title")=story.user.displayName
                        img(src=story.user.image class="circle responsive-img img-small")

